---
layout: null
permalink: /sitemap.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% assign pages = site.pages | where_exp: "p", "p.sitemap != false" %}
  {% for page in pages %}
  <url>
    <loc>{{ site.url | append: page.url }}</loc>
    <lastmod>{{ page.date | default: site.time | date_to_xmlschema }}</lastmod>
    <changefreq>{% if page.url == "/" %}weekly{% else %}monthly{% endif %}</changefreq>
    <priority>{% if page.url == "/" %}1.0{% else %}0.6{% endif %}</priority>
  </url>
  {% endfor %}
</urlset>
